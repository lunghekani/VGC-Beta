
@{
    ViewData["Title"] = "AddCourse";
}

<div class="card">
        <div class="card-body">
            <h3 class="font-size-lg text-dark font-weight-bold mb-6">Add Course:</h3>
            <div class="mb-15">
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Course Name:</label>
                    <div class="col-lg-6">
                        <input type="text" runat="server" placeholder="Enter course name" class="form-control" ID="txtCourseName">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Course Description:</label>
                    <div class="col-lg-6">
                        <input type="text" runat="server" TextMode="MultiLine" Rows="3" Columns="75" class="form-control" ID="txtDescription" placeholder="Enter a description">


                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Course Code:</label>
                    <div class="col-lg-6">
                        <input type="text" runat="server" class="form-control" ID="txtCode" placeholder="#A0A0A0">


                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Start Time:</label>
                    <div class="col-lg-6">
                        <input class="form-control" type="datetime-local" value="2021-09-06T13:45:00" ID="txtStartTime" runat="server">

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">End Time:</label>
                    <div class="col-lg-6">
                        <input class="form-control" type="datetime-local" value="2022-01-19T13:45:00" ID="txtEndTime" runat="server">


                        <span class="form-text text-muted">Leave blank if there is no specific end time</span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-3 col-form-label">Visible</label>
                    <div class="col-3">
                        <span class="switch switch-success witch-outline switch-icon ">
                            <label>
                                <input type="checkbox" runat="server" ID="checkVisible" CssClass="form-control" />

                                <span></span>
                            </label>
                        </span>
                    </div>
                </div>


            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <input type="submit" runat="server" value="Create Course" ID="btnCreate" class="btn btn-success mr-2" OnClick="btnCreate_Click" />

                    </div>
                </div>
            </div>
        </div>
    </div>

