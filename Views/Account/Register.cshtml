            setTimeout(() => {
                $(".fullf").toggle()
            }, 1000);
        });
        $(".chat-icon").click(() => {
            $(".fullf").toggle()

            if (isLoaded == false) {
                // load the chat
                $.getJSON("/Pages/assets/chat/bot-data/script.json", function (dataJSON) {
                    $('#flowchat').flowchat({
                        dataJSON: dataJSON,
                        autoStart: true
