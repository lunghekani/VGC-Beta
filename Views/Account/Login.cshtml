@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable" style="background-image: url('/media/bg/bg-2.jpg');">
    <div class="row login-form text-center text-white p-7 position-relative overflow-hidden"  >

    

        <div class="opacity-40 font-weight-normal">
            <h3>Sign In To Umdlalo</h3>
            <p class="opacity-40">Enter your details to login to your account:</p>
        </div>

    

        <div class="d-flex flex-center flex-row-fluid form fv-plugins-bootstrap fv-plugins-framework  text-center" id="kt_login_signin_form">
            <form method="post" >
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn btn-pill btn-primary">Login</button>
            </form>
        </div>
  
    </div>
</body>
