@using VGC.ViewModels
@model CreateRoleViewModel

@{
    ViewBag.Title = "Create a new role";
}
       <form method="post">
        <div class="#">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-info p1-3">Add New Role</h2>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class=" form-group row">
                           <div class="col-4">
                            <label asp-for="RoleName"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-12 offset-4 row">
                            <div class="col">
                                <input type="submit" class=" btn btn-pill btn-primary opacity-90 px-15 py-3 m-2" value="Create"/> 
                            </div>
                            <div class="col-6">
                                <a asp-action="Index" class=" btn btn-pill btn-primary opacity-90 px-15 py-3 m-2">Back </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @*Keep this empty*@
                </div>
            </div>
        </div>
    </form>
                       
   